{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",

    "target": "es2020",
    "lib": ["ES2020"],
    "module": "commonjs",

    "esModuleInterop": true,

    "outDir": "dist",
    "rootDir": "src",

    "resolveJsonModule": true,
    "baseUrl": "src",

    "paths": {
      "@command": ["util/Command.ts"],
      "@types": ["types"],
      "@util/*": ["util/*"],
      "@setup": ["setup.ts"],
      "@/*": ["./*"]
    }
  }
}
